@{
    ViewData["Title"] = "Producción histórica por región (Ton)";
}

<partial name="_Libs" model='new List<string> { "chart.min.css", "bootstrap-select", "regionsChart.min.js" }' />

<h2>@ViewData["Title"]</h2>

<select id="id" name="id" class="selectpicker form-control" multiple data-max-options="1" value="0" onchange="changeData(this.value);">
    <optgroup label="Especie" data-max-options="1">
        <option selected="selected" value="0">
            Almeja
        </option>
        <option value="1">
            Erizo
        </option>
        <option value="2">
            Luga
        </option>
    </optgroup>
</select>

<div id="newchartdiv" style="width: 100%; height: 400px;"></div>

@section PreScripts
{
    <script src="https://www.amcharts.com/lib/4/core.js"></script>
    <script src="https://www.amcharts.com/lib/4/charts.js"></script>
    <script src="https://www.amcharts.com/lib/4/maps.js"></script>
    <script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>
    <script src="https://www.amcharts.com/lib/4/geodata/chileLow.js"></script>
    <script src="https://www.amcharts.com/lib/4/lang/es_ES.js"></script>
}