@model IEnumerable<MaReB.Models.Export>

@{
    ViewData["Title"] = "Exportaciones";
}

<h2>Base de datos y Estad&iacute;stica de Exportaciones bent&oacute;nicas</h2>

<p>
    <a asp-action="Create">Ingresar Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Species)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Processing)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kg)
                        </td>
                        <td>
                            @String.Format("{0:C}",(float)(item.FOB/100))
                        </td>
                        <td>
                            @item.Country.Name
                        </td>
                        <td>
                            @StringManipulations.ToRomanNumeral(item.Region.Id) @item.Region.Name
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
            }
    </tbody>
</table>